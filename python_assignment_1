# Question 23: Convert "hello world" to "hElLo WoRlD" (alternating case)
# Your code here

def alter(text):
    words = text.split()
    result = []
    for word in words:
        altered_word = ''
        for i in range(len(word)):
            if i%2 == 0 :
                altered_word += word[i].lower()
            else:
                altered_word += word[i].upper()
        result.append(altered_word)
    return ' '.join(result)



result = alter("hello world")
result


