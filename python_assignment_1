# Question 38: Check if string is a valid palindrome ignoring case: "A man a plan a canal Panama"
# Your code here

def palin_drome(text):
    
    text1 = "".join(text.lower().replace(" ",""))
    text_a = text[::-1]
    text2 = text_a.lower().replace(" ","")
    if(text1 == text2):
        print("It is a palindorme")
        print(text2)
    else: 
        print("It is not a palindrome")
        print(text2)


result = palin_drome("A man a plan a canal Panama")


# Question 39: Find the most common word in "the quick brown fox jumps over the lazy dog"
# Your code here

def freq_uency(text):
    words = text.split()
    most_common = max(set(words), key = words.count)
    return most_common 

result = freq_uency("the quick brown fox jumps over the lazy dog")
result
    
# Question 40: Generate acronym from "National Aeronautics and Space Administration"
# Your code here

def acronym(text):
    text1 = text.replace(" ","")
    return "".join(char for char in text1 if (char == char.upper()))

result = acronym("National Aeronautics and Space Administration")
result


# Question 41: Check if string contains balanced parentheses: "((()))"
# Your code here

def count_paranthesis(text):
    count1 = 0
    for char in text: 
        if char == "(":
            count1 = count1 + 1
            print(f"count for paranthesis is {count1}")
        elif  char == ")" :
            count1 = count1 - 1
            print(f"count for paranthesis is {count1}")
        if (count1 == 0):
            print(f"count for paranthesis is equal")
            break 

result = count_paranthesis("((()))")
result


# Question 42: Convert "hello world" to Morse code
# Your code here

def morse_code(text):
    morse_dict = { 'A':'.-', 'B':'-.', 'C':'- -', 'D':'-.-', 'E':'.--', 'F':'.-.-',
                   'G':'-..', 'H':'---', 'I':'-.-.', 'J':'.---',  'K':'._._-',
                   'L': '.-..', 'M': '--', 'N': '-.',  'O': '---', 'P': '.--.', 
                   'Q': '--.-', 'R': '.-.', 'S': '...', 'T': '-', 'U': '..-', 
                   'V': '...-', 'W': '.--', 'X': '-..-', 'Y': '-.--', 'Z': '--..'}
    morse = " ".join(morse_dict.get(char.upper(), '') for char in text if char.isalpha())
    return morse 

result = morse_code("hello world")
result    
    

